#demo{:style=>"position:absolute; z-index:2; top:200px; left:300px;"}
.slidecontainer{:style=>"position:absolute; bottom:150px; left:130px; z-index:2;"}
  %input#myRange.slider{:max => "4000", :min => "100", :type => "range", :value => "1000", :style=> "display:none;"}/
#spin-button.btn.btn-success{:onclick=> "toggleSpin()", :style=> "position:absolute; top:300px; right:10px; z-index:2;"}
  %i.fas.fa-redo.fa-5x
#stop-button.btn.btn-danger{:onclick=> "toggleStop()", :style=> "position:absolute; top:300px; right:10px; z-index:1;"}
  %i.far.fa-hand-paper.fa-5x

#carouselExampleIndicators.carousel
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carouselExampleIndicators"}
    - @spin.shots.each_with_index do |index|
      %li{"data-slide-to" => index, "data-target" => "#carouselExampleIndicators"}

  .carousel-inner{:style=>"height:100vh;"}
    .carousel-item.active
      =image_tag @spin.shot1(:large)
    - @spin.shots.each do |shot|
      .carousel-item
        =image_tag shot.picture(:large)
  
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleIndicators", :role => "button"}
    %span.carousel-control-prev-icon{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleIndicators", :role => "button"}
    %span.carousel-control-next-icon{"aria-hidden" => "true"}
    %span.sr-only Next


