#new-reg{ :style => " position: absolute; bottom:0; background-color: #160987" }
  #new-reg-icon{ :style => "position: absolute; right: 140px; top:20px; height:10px;" }
    %span.fa-4x.fa-layers.fa-fw
      %i.fas.fa-envelope
      %i.fas.fa-sign-in-alt.fa-inverse#little-cog{:style => "color: #160987;", "data-fa-transform" => "shrink-13 up-3 left-4"}
  #new-reg-forms{ :style => "position: absolute; left: 15px; top:0 height:10px; "}
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
      .error-notification-area{ :style => "position: absolute; height: 50px; top:10; color:white;" }
        = f.error_notification
      .panel-input-1{ :style => "top:90px; height:30px; " }
        = f.input :email, required: true, autofocus: true, placeholder: "email"
        / = if devise_mapping.confirmable? && resource.pending_reconfirmation?
        /   %p
        /     Currently waiting confirmation for:
        /     = resource.unconfirmed_email
        .panel-input-2{ :style => "top:70px; height: 30px;" }
          = f.input :password, autocomplete: "off", placeholder: "create a password", required: false
        .panel-input-3{ :style => "top:140px; height: 30px;" }
          = f.input :password_confirmation, required: false, placeholder: "retype the password you just created"
        .panel-input-3{ :style => "top:250px; height: 30px; " }
          = f.button :submit, "Create", class: "btn-primary"