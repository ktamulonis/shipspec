#mainDiv
  #boxDiv.a-flip
    #box-front
      %img(src="https://s3.amazonaws.com/shipspec/icon-front.png")
    #box-back
      %img(src="https://s3.amazonaws.com/shipspec/icon-back.png")
      #close-new-reg

      = render 'new_reg_forms'
    #box-left
      %img(src="https://s3.amazonaws.com/shipspec/icon-left.png")
    #box-right
      %img(src="https://s3.amazonaws.com/shipspec/icon-right.png")
    #box-top
    #box-bottom
    
    
/ .container
/   .row
/     .profile.center
/       = panel title: 'Signup', context: :primary do
/         = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, boolean: :horizontal_boolean } ) do |f|
/           .panel-body
/             = f.error_notification

/             .form-inputs
/               = f.input :email, required: true, autofocus: true
/               = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
/               = f.input :password_confirmation, required: true
/           .panel-footer
/             .buttons
/               = f.button :submit, "Sign up", class: "btn-primary"

/             .links
/               = render "devise/shared/links"

